  <div class="container">
    <div class="row">
       <h2>My Tasks</h2>
  <ul class="list-group my-4">
  <% @tasks.each do |task| %>
    <li class="list-group-item">
      <div>
        <i class="<%= task.completed ? 'fa-solid fa-check' : '' %>"></i>
        <%= link_to task.title, task_path(task.id) %> -
        <%= link_to delete_task_path(task),
              data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
              class: "text-danger" do %>
                <i class="fa-solid fa-trash me-1"></i>
              <% end %>
      </div>
    </li>
  <% end %>
</ul>
  <%= link_to "Add new task", new_task_path(), class: "btn btn-primary"  %>
    </div>
  </div>
